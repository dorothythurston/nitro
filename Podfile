# Uncomment this line to define a global platform for your project
source 'https://github.com/CocoaPods/Specs.git'
platform :ios, '8.0'
use_frameworks!

def shared_pods
    pod 'Alamofire', '~> 3.0'
    pod 'Nocilla'
end

target 'Nitro' do
  shared_pods
end

target 'NitroTests' do
  shared_pods
end

target 'NitroUITests' do
  shared_pods
end
